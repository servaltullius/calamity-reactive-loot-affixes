{
  "project_name": "Calamity - Reactive Loot & Affixes",
  "root": ".",
  "exclude_dirs": [
    "node_modules",
    "vendor",
    "third_party",
    "external",
    "extern",
    "deps",
    ".git",
    ".vibe",
    ".venv",
    "venv",
    ".tox",
    ".pytest_cache",
    ".mypy_cache",
    ".ruff_cache",
    ".cache",
    ".idea",
    "dist",
    "build",
    "build.linux-clangcl-rel",
    "dev-artifacts",
    "out",
    "coverage",
    "bin",
    "obj",
    "artifacts",
    "target",
    ".gradle",
    ".dart_tool",
    ".next",
    ".nuxt",
    ".svelte-kit",
    ".turbo",
    ".xwin",
    ".tmp",
    "__pycache__"
  ],
  "include_globs": [
    "**/*.cs",
    "**/*.xaml",
    "**/*.fs",
    "**/*.vb",
    "**/*.py",
    "**/*.js",
    "**/*.jsx",
    "**/*.ts",
    "**/*.tsx",
    "**/*.go",
    "**/*.rs",
    "**/*.java",
    "**/*.kt",
    "**/*.c",
    "**/*.h",
    "**/*.cpp",
    "**/*.hpp",
    "**/*.csproj",
    "**/*.sln",
    "**/*.fsproj",
    "**/*.vbproj",
    "**/*.md",
    "**/*.json",
    "**/*.yml",
    "**/*.yaml",
    "**/*.toml",
    "**/*.xml"
  ],
  "critical_tags": [
    "@critical",
    "CRITICAL:"
  ],
  "context": {
    "latest_file": ".vibe/context/LATEST_CONTEXT.md",
    "max_recent_files": 12,
    "commands": {
      "doctor": "python3 scripts/vibe.py doctor --full",
      "search": "python3 scripts/vibe.py search <query>"
    }
  },
  "checks": {
    "doctor": [],
    "precommit": []
  },
  "quality_gates": {
    "cycle_block": true,
    "boundary_block": false,
    "dotnet_build_block_on_increase": true,
    "typecheck_prefer_solution": false,
    "complexity_warn_threshold": 15,
    "max_method_lines_warn": 50,
    "max_nesting_warn": 4,
    "max_params_warn": 5,
    "typecheck_cmd": [
      "dotnet",
      "build",
      "tools/CalamityAffixes.Tools.sln",
      "-c",
      "Release"
    ],
    "typecheck_when_any_glob": [
      "**/*.cs",
      "**/*.csproj",
      "**/*.fsproj",
      "**/*.vbproj",
      "**/*.sln",
      "Directory.Build.props",
      "Directory.Build.targets",
      "global.json"
    ]
  },
  "architecture": {
    "enabled": true,
    "rules": [
      {
        "name": "cs_no_ref_tests",
        "from_globs": ["tools/**/*.csproj"],
        "to_globs": ["tools/**/*Tests*.csproj", "tools/**/*.Tests.csproj"],
        "kinds": ["ProjectReference"],
        "reason": "Test projects may reference production code, but production code must not reference test assemblies."
      },
      {
        "name": "cpp_public_headers_no_src",
        "from_globs": ["skse/CalamityAffixes/include/**/*.h", "skse/CalamityAffixes/include/**/*.hpp"],
        "to_globs": ["skse/CalamityAffixes/src/**"],
        "kinds": ["cpp_include"],
        "reason": "Public headers under include/ must not depend on private implementation under src/."
      },
      {
        "name": "cpp_runtime_no_tests",
        "from_globs": ["skse/CalamityAffixes/src/**", "skse/CalamityAffixes/include/**"],
        "to_globs": ["skse/CalamityAffixes/tests/**"],
        "kinds": ["cpp_include"],
        "reason": "Runtime code must not include/require test code."
      }
    ],
    "python_roots": [
      "src",
      "."
    ],
    "js_aliases": {}
  },
  "placeholders": {
    "enabled": true,
    "target_lang": "korean",
    "bad_unit_words_ko": [
      "초",
      "분",
      "시간",
      "포인트",
      "%",
      "동안",
      "초당"
    ]
  },
  "profiling": {
    "enabled_by_default": false,
    "mode": "dotnet",
    "entry": null
  }
}
